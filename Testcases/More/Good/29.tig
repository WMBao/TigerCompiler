/* types can be aliases */
let
	type bruce_wayne = {car:string}
	type batman = bruce_wayne  /*batman is an alias for bruce_wayne*/
	var millionaire := bruce_wayne{car="mercedes"}
	var hero := batman{car="batmobile"}
in
	millionaire := hero;	/*assignment is valid*/
	print(millionaire.car)	/*batmobile*/
end


